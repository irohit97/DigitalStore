# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI='mongodb://localhost:27017/digitalStore'
# or use this if you're using MongoDB Atlas:
# MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/digitalstore?retryWrites=true&w=majority

# JWT Secret for authentication
JWT_SECRET=your_secure_jwt_secret_here

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_from_dashboard
RAZORPAY_KEY_SECRET=your_razorpay_secret_from_dashboard

# Email Configuration (for Nodemailer)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
# Example for Gmail: generate an App Password at https://myaccount.google.com/apppasswords

# Optional - Frontend URL (if using CORS or email templates)
CLIENT_URL=http://localhost:3000
